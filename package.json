{
	"name": "action-buttons",
	"displayName": "VsCode Action Buttons",
	"description": "",
	"version": "1.1.5",
	"publisher": "seunlanlege",
	"repository": {
		"type": "git",
		"url": "https://github.com/SeunLanLege/vscode-action-buttons.git"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.refreshButtons",
				"title": "Refresh Action Buttons"
			}
		],
		"configuration": {
			"type": "object",
			"title": "VsCode Action Buttons",
			"properties": {
				"actionButtons": {
					"type": "object",
					"properties": {
						"commands": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"cwd": {
										"type": "string",
										"required": false
									},
									"command": {
										"type": "string",
										"required": true
									},
									"singleInstance": {
										"type": "boolean"
									},
									"name": {
										"type": "string"
									},
									"color": {
										"type": "string",
										"required": false
									}
								}
							}
						},
						"defaultColor": {
							"type": "string",
							"required": false
						},
						"reloadButton": {
							"type": [
								"string",
								"null"
							],
							"required": false
						},
						"loadNpmCommands": {
							"type": "boolean",
							"required": false
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^9.0.0",
		"@types/node": "^12.12.0",
		"mocha": "^9.1.0",
		"typescript": "^4.3.5",
		"@types/vscode": "^1.53.0"
	}
}